{
  "name": "vibe-kanban-backend",
  "version": "1.0.0",
  "description": "Vibe Kanban backend server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production tsx index.ts",
    "start:compiled": "node dist/index.js",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "npm run build && node dist/scripts/migrate.js",
    "db:reset": "rm -f data/vibe-kanban.db && npm run dev",
    "clean": "rm -rf dist",
    "clean:logs": "rm -f *.log",
    "clean:all": "npm run clean && npm run clean:logs"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.38.0",
    "@octokit/rest": "^22.0.0",
    "@sentry/node": "^8.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.1.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "ignore": "^5.3.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "simple-git": "^3.22.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/diff": "^5.0.9",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
